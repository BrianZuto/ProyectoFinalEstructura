<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.proyectofinal.controlador.MensajesController">
    <top>
        <Label text="✉️ Mensajería entre Estudiantes" style="-fx-font-size: 20px; -fx-padding: 10px; -fx-font-weight: bold;" />
    </top>

    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
            </padding>

            <ListView fx:id="listConversaciones" prefHeight="150" />

            <TextArea fx:id="areaMensajes" editable="false" prefRowCount="6" />

            <HBox spacing="10">
                <TextField fx:id="txtMensaje" promptText="Escribe un mensaje..." />
                <Button text="Enviar" onAction="#enviarMensaje" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
            </HBox>
        </VBox>
    </center>
</BorderPane>