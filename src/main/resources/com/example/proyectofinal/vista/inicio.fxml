<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.proyectofinal.controlador.InicioController">
    <top>
        <Label text="🔍 Explorar Contenidos" style="-fx-font-size: 20px; -fx-padding: 10px; -fx-font-weight: bold;" />
    </top>

    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <HBox spacing="10">
                <TextField fx:id="txtBuscar" promptText="Buscar por tema, autor o tipo" />
                <Button text="Buscar" onAction="#buscarContenido" style="-fx-background-color: #3f51b5; -fx-text-fill: white;" />
            </HBox>

            <ListView fx:id="listResultados" prefHeight="300" />

            <Label text="👤 Perfil del Usuario" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <TextArea fx:id="areaPerfil" editable="false" prefRowCount="5" />
        </VBox>
    </center>
</BorderPane>